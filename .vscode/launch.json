{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DateTime",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DateTime/DateTime.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/DateTime",
            "environment": [{
                "name": "PATH",
                "value": "${env:PATH};C:\\mingw64\\bin"
            }],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",
            "preLaunchTask": "Build Only",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set breakpoint pending on"
                }
            ]
        }
    ]
}