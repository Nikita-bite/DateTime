{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run DateTime",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "\"C:\\mingw64\\bin\\g++.exe\" -g -Wall -Wextra -Wno-reorder -Wno-unused-parameter \"${workspaceFolder}\\DateTime\\main.cpp\" \"${workspaceFolder}\\DateTime\\DateTime.cpp\" -I \"${workspaceFolder}\\DateTime\" -o \"${workspaceFolder}\\DateTime\\DateTime.exe\" && \"${workspaceFolder}\\DateTime\\DateTime.exe\" & pause"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "Build Only",
            "type": "shell",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wno-reorder",
                "-Wno-unused-parameter",
                "${workspaceFolder}\\DateTime\\main.cpp",
                "${workspaceFolder}\\DateTime\\DateTime.cpp",
                "-I",
                "${workspaceFolder}\\DateTime",
                "-o",
                "${workspaceFolder}\\DateTime\\DateTime.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/DateTime/Tests.exe",
            "dependsOn": "Build Tests",
            "args": [
                "--gtest_color=yes"
            ],
            "options": {
                "env": {
                    "GTEST_COLOR": "1"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Build GTest",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "cd libs\\googletest && (if not exist build mkdir build) && cd build && cmake -G \"MinGW Makefiles\" .. && mingw32-make"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "\"C:\\mingw64\\bin\\g++.exe\" -g -Wall -Wextra -I \"${workspaceFolder}/DateTime\" -I \"${workspaceFolder}/libs/googletest/googletest/include\" \"${workspaceFolder}/DateTime/DateTimeTests/Tests.cpp\" \"${workspaceFolder}/DateTime/DateTime.cpp\" \"${workspaceFolder}/libs/googletest/build/lib/libgtest.a\" \"${workspaceFolder}/libs/googletest/build/lib/libgtest_main.a\" -o \"${workspaceFolder}/DateTime/Tests.exe\" -pthread"
            ],
            "dependsOn": "Build GTest",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}